@using EntityLayer.Concrete
@model List<About>
 <!-- ======= About Section ======= -->
    <section id="about" class="about">
      <div class="container">

        <div class="section-title">
          <h2>Hakkımda</h2>
        </div>
        @foreach (var item in Model)
        {
        <div class="row">
          <div class="col-lg-4" data-aos="fade-right">
            <img src="@item.ImageUrl" class="img-fluid" alt="">
          </div>
          <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
            <h3>@item.Title</h3>
            <p class="fst-italic">
              @item.Description
            </p>
            <div class="row">
              <div class="col-lg-6">
                <ul>
                  <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@item.Age</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>Şehir:</strong> <span>@item.Address</span></li>
                </ul>
              </div>
              <div class="col-lg-6">
                <ul>
                  <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Phone</span></li>
                  <li><i class="bi bi-chevron-right"></i> <strong>E-mail:</strong> <span>@item.Mail</span></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        }
      </div>
    </section><!-- End About Section -->