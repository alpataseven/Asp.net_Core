﻿@using EntityLayer.Concrete
@model List<Service>
<!-- ======= Service Section ======= -->
 <section id="services" class="services">
  <div class="container">

    <div class="section-title">
      <h2>Hizmetlerim</h2>
      <p>Aşağıda belirtmiş olduğum hizmetleri sizlere sunmaktan mutluluk duyuyorum. Hizmetleri almak için iletişim kısmından bana ulaşabilirsiniz.</p>
    </div>
 <div class="row">
            @foreach (var item in Model)
            {
                   <div class="col-lg-4 col-md-6 icon-box" data-aos="fade-up">
                        <div class="icon"><i class="@item.ImageUrl"></i></div>
                    <h4 class="title"><a href="">@item.Title</a></h4>
                   </div> 
            }

    </div>
  </div>
</section><!-- End Services Section -->